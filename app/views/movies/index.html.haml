-#  This file is app/views/movies/index.html.haml
= form_tag movies_path, :id => 'ratings_form', :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, session[:ratings][rating], :id => 'ratings_#{rating}'
  = submit_tag 'Refresh', :id => 'ratings_submit'

%h1 All Movies

%table#movies
  %thead
    %tr
      %th#title_header{:class => ('hilite' if current_page?(order: 'title'))}= link_to('Movie Title', :order => 'title') 
      %th Rating
      %th#release_date_header{:class => ('hilite' if current_page?(order: 'release'))}= link_to('Release Date', :order => 'release')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
